<script>
function createDynamicURL()
{
    //The variable to be returned
    var URL='https://dailyfikr.github.io/PROD/index.html?key=1_TK399AVdWX6AMKF9dnhvrb4nnLT4TsJKJGEdkKz';

    //The variables containing the respective IDs
    var City='';
	City=document.getElementById("myCity").value;
	URL+="&City===%27"+City+"%27";
    var Status='';
	Status=document.getElementById("myStatus").value;
	//alert(Status);
    if(Status!="All"){
	  URL+="&S="+Status;
	}
	var Visit='';
	Visit=document.getElementById("myVisited").value;
    if(Visit!="All"){
	  URL+="&P="+Visit;
	}
 	//alert (URL);
    return URL;
}
function RedirectURL()
{
    window.location= createDynamicURL();
	//alert(createDynamicURL());
}
</script>
